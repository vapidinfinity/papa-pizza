class OrderItem(Protocol):
    @property
    def name(self) -> str:
        return self._name

    @property
    def price(self) -> float:
        return self._price


class Pizza(OrderItem):
    def __init__(self, name: str, price: float):
        self._name = name
        self._price = price

class ServiceType(Enum):
    PICKUP = 0
    DELIVERY = 1

